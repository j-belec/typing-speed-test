<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Typing Speed Test</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="/js/game.js" defer></script>
  </head>
  <body>
    <div class="main__container" id="main">
      <div class="main__text-container">
        <% let phraseSize = phrase.length%> <% let iteration = 0%>
        <%phrase.map(word => { %> <% iteration = iteration + 1%> <% let
        letterArr = word.split("")%>
        <div>
          <%letterArr.map(letter => { %>
          <letter class="partes"><%=letter%></letter>
          <%})%>
        </div>
        <div>
          <%if(iteration != phraseSize) {%>
          <letter class="partes">&nbsp;</letter>
          <% } %>
        </div>
        <% }) %>
        <i class="fa-solid fa-quote-right main__quotes-icon"></i>
      </div>
      <textarea
        name=""
        id="userinput"
        class="main__user-input"
        placeholder=""
      ></textarea>
      <div class="main__stats-container">
        <%if(lang == "eng") {%>
        <p>Time: <span class="actual-time">--</span></p>
        <p>Accuracy: <span class="accuracy">--</span></p>
        <p>WPM: <span class="wpm">--</span></p>
        <%} else {%>
        <p>Tiempo: <span class="actual-time">--</span></p>
        <p>Precisi칩n: <span class="accuracy">--</span></p>
        <p>PPM: <span class="wpm">--</span></p>
        <%}%>
      </div>
      <%if(lang == "eng") {%>
      <p class="main__start-text">Press Start button!</p>
      <%} else {%>
      <p class="main__start-text">Presion치 el bot칩n Empezar!</p>
      <%}%>
      <div class="main__btns-container">
        <%if(lang == "eng") {%>
        <button class="main__btn main__btn--start">Start</button>
        <button class="main__btn main__btn--another">
          Another text <i class="fa-solid fa-rotate"></i>
        </button>
        <%} else {%>
        <button class="main__btn main__btn--start">Empezar</button>
        <button class="main__btn main__btn--another">
          Cambiar texto <i class="fa-solid fa-rotate"></i>
        </button>
        <%}%>
      </div>
      <a href="/" class="main__btn main__btn--menu">Menu</a>
    </div>
    <div class="main__popup-container">
      <%if(lang == "eng") {%>
      <p class="main__popup-text">
        Time: <span class="main__popup-time">30s</span>
      </p>
      <p class="main__popup-text">
        Accuracy: <span class="main__popup-accuracy">90.7%</span>
      </p>
      <p class="main__popup-text">
        WPM: <span class="main__popup-wpm">35.6</span>
      </p>
      <%} else {%>
      <p class="main__popup-text">
        Tiempo: <span class="main__popup-time">30s</span>
      </p>
      <p class="main__popup-text">
        Precisi칩n: <span class="main__popup-accuracy">90.7%</span>
      </p>
      <p class="main__popup-text">
        PPM: <span class="main__popup-wpm">35.6</span>
      </p>
      <%}%>
      <i class="fa-solid fa-xmark main__popup-xmark"></i>
    </div>
  </body>
</html>
